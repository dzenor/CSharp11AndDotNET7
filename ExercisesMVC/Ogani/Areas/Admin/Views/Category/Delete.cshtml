
@model Ogani.Data.Entities.Category

@{
    ViewData["Title"] = "Delete";
}

<h4 class="text-center py-4">
   Category</h4>
    <hr class="px-6">
    <dl>
        <div class="row  py-2">
            <dt class="col-4 text-end">  @Html.DisplayNameFor(model => model.CategoryName) :  </dt>
            <dd class="col-8"> @Html.DisplayFor(model => model.CategoryName)</dd>
        </div>
        <div class="row  py-2">
            <dt class="col-4 text-end">  @Html.DisplayNameFor(model => model.CategoryDescription) :  </dt>
            <dd class="col-8"> @Html.DisplayFor(model => model.CategoryDescription)</dd>
        </div>
    </dl>
    <div>
        <a asp-action="Edit" asp-route-id="@Model.CategoryID" class="btn  btn-outline-success">Edit</a> |
        <a asp-controller="Console" asp-action="Categories" class="btn  btn-outline-info">Back to List</a> |

    </div>

    <form asp-action="Delete">
        <input type="hidden" asp-for="CategoryID" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-controller="Console" asp-action="Products">Back to List</a>
    </form>

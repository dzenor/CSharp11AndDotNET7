@model IEnumerable<Category>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using WebApk2
@using WebApk2.Models
@{
    ViewData["Title"] = "Index";
}


<h1>Index Category</h1>




<a asp-controller="Category" class="btn btn-primary" asp-action="Add">
    <i class="bi bi-cloud-plus"></i> &nbsp; Create New Category
</a>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col" >Name</th>
                <th scope="col" >Display Order</th>
                <th scope="col">Date Created</th>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model)
            {
            <tr>
                <th scope="row">@item.Id</th>
                <td>@item.Name</td>
                <td>@item.DisplayOrder</td>
                <td>@item.DateCreated </td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Category" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary"> <i class="bi bi-pencil-square"></i> Edit </a>
                    </div>
                </td>
            </tr>
                
            }
           
        </tbody>
    </table>


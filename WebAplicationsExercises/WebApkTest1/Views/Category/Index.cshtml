
@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}


<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" class="btn btn-primary" asp-action="Create">
                <i class="bi bi-cloud-plus"></i> &nbsp; Create New Category
            </a>
        </div>
    </div>
    <br /><br />

<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th >Category Name</th>
            <th>Display Order</th>
            <th>Time</th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td width="50%">
                    @item.Name
                </td>
                <td width="30%">
                    @item.DisplayOrder
                </td>
                <td width="20%">
                    @item.CreatedDateTime
                </td>
                <td>
                    <div class="w-75 btn-group" role="group">
                            <a asp-controller="Category" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary"> <i class="bi bi-pencil-square"></i> Edit </a>
                    </div>
                </td>

            </tr>
        }
    </tbody>
</table>

</div>

